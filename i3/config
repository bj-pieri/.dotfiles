# Define colors variables:
set $gruvbox_bg       #282828
set $gruvbox_bgg      #282828bb
set $gruvbox_fg0      #fbf1c7
set $gruvbox_blue     #458588
set $gruvbox_orang    #fe8019
set $gruvbox_green    #b8bb26
set $urgentred        #e53935
set $white            #ffffff
set $black            #000000
set $darkgrey         #383c4a
set $grey             #b0b5bd
set $orange           #d65d0e

# define colors for windows:
#class                  <border>            <bground>             <text>            <indicator>       <child_border>       #
client.focused          $gruvbox_orange     $gruvbox_bg           $gruvbox_fg0      $gruvbox_orange
client.unfocused        $gruvbox_bg         $gruvbox_bg           $gruvbox_fg0      $darkgrey         $darkgrey
client.focused_inactive $gruvbox_bg         $gruvbox_bg           $grey             $black            $black
client.urgent           $urgentred          $urgentred            $white            $yellowbrown      $yellowbrown


############################################
# bar settings (input comes from i3blocks) #
############################################

bar {
    # status_command i3status
    font pango: Hack Regular Nerd Font Complete 12
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position bottom
    separator_symbol " "
    # i3bar_command i3bar --transparency

# gruvbox bar theme
    colors {
      background $gruvbox_bg
      statusline $gruvbox_fg0

#     <colorclass>            <border>         <background>        <text>     #
      focused_workspace       $gruvbox_fg0     $gruvbox_fg0        $gruvbox_bg
      inactive_workspace      $gruvbox_bg      $gruvbox_bg         $fg
      }
}


